<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="free">
	<select id="freeList" resultType="com.lg.dto.FreeDTO">
		select * from free order by regdate desc
	</select>
	<select id="freeDetail" resultType="com.lg.dto.FreeDTO">
		select * from free where seq=#{seq}
	</select>
	<!-- 글 수 카운트 -->
	<select id="totalCount" resultType="integer" >
		select count(*) from free
	</select>
	<insert id="freeInsert">
		insert into free values ((select nvl(max(seq), 0)+1 from board), #{title}, #{content}, 'admin', sysdate, 0)
	</insert>
	<delete id="freeDelete">
		delete from free where seq=#{seq}
	</delete>
	<update id="freeEdit">
		update free set title=#{title}, content=#{content} where seq=#{seq}
	</update>
</mapper>